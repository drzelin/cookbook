<div id="page_wrapper">
  <h1>Recipes New</h1>

  <%= form_for :recipe, url: recipes_path do |f| %>
    <% if @recipe.errors.any? %>
      <div id="errors">
        <h2>
          <%= pluralize(@recipe.errors.count, "error") %> prevented this recipe from saving
        </h2>
        <ul>
          <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :prep_time_in_mins %><br>
      <%= f.text_field :prep_time_in_mins %>
    </p>

    <p>
      <%= f.label :servings %><br>
      <%= f.text_field :servings %>
    </p>

    <p>
      <%= f.label :directions %><br>
      <%= f.text_area :directions %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</p>
